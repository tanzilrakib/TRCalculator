<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rakib.trcalculator.MainActivity">

    <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:text="Hello World!"-->
        <!--tools:layout_constraintTop_creator="1"-->
        <!--tools:layout_constraintLeft_creator="1"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/result"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button1"
        android:minWidth="48dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button2"
        android:minWidth="48dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button3"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button4"
        android:minWidth="48dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button5"
        android:minWidth="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonLeftBracket"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeftBracket" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button6"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button7"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button8"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button9"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button0"
        android:minWidth="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonEquals"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonDot"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonPlus"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonRightBracket"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonRightBracket"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonMinus"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonPlus"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonPlus"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="Ã—"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonMultiply"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMinus"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonMinus"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonDivision"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiply"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonMultiply"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="&lt;"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonBackspace"
        android:minWidth="48dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonDivision"
        android:layout_marginLeft="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivision" />

    <Button
        android:text="("
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonLeftBracket"
        android:minWidth="48dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonRightBracket"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonRightBracket" />

    <Button
        android:text=")"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonRightBracket"
        android:minWidth="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newNumber"
        app:layout_constraintLeft_toLeftOf="@+id/newNumber" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonModulo"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonDot"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="8dp" />
    <Button
        android:text="CLR"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/buttonCLR"
        android:minWidth="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonModulo"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonModulo"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operation"
        tools:layout_editor_absoluteY="73dp"
        app:layout_constraintRight_toLeftOf="@+id/newNumber"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/newNumber"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_constraintLeft_toLeftOf="@+id/result" />
</android.support.constraint.ConstraintLayout>
